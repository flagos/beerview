h3 #{recipe.name}

div()
  div(class='col s4')
    div Designed by: #{recipe.author}
  div(class='col s4')
    div Style: #{recipe.style.category} #{recipe.style.category!='' ? '-' : ''} #{recipe.style.name}
  div(class='col s4')
    div Batchsize: #{recipe.batchSize} L


div(class="section")
  h5 Characteristics



  .characteristics
    .characteristic-line
      div(class="c-name col s4") EBC
      div(class="c-value col s4") #{Brauhaus.srmToEbc(recipe.color).toFixed(0)} (#{Brauhaus.srmToName(recipe.color)})
      div(class="c-style col s4") style bar
    .characteristic-line
      div(class="c-name col s4") Alcohol
      div(class="c-value col s4") #{recipe.abv.toFixed(1)} %
      div(class="c-style col s4")
        if style
          div(class='style-bar style-bar-background')
          div(class='style-bar style-bar-style', style='width:' + (bar_chart.bar_char_compute_left("abv", style.abv[1]) - bar_chart.bar_char_compute_left("abv",  style.abv[0])).toString() +'px;' + 'margin-left:' + (bar_chart.bar_char_compute_left("abv",  style.abv[0])).toString() +'px;')

          div(class='style-bar style-bar-marker', style='margin-left:' + (bar_chart.bar_char_compute_left("abv", recipe.abv)).toString() +'px;')

          div #{style.abv[0]} - #{style.abv[1]}
        else
          div no style !
    .characteristic-line
      div(class="c-name col s4") Bitterness
      div(class="c-value col s4") #{recipe.ibu.toFixed(0)} IBU
      div(class="c-style col s4") style bar
    .characteristic-line
      div(class="c-name col s4") OG
      div(class="c-value col s4") #{recipe.og.toFixed(3)}
      div(class="c-style col s4") style bar
    .characteristic-line
      div(class="c-name col s4") FG
      div(class="c-value col s4") #{recipe.fg.toFixed(3)}
      div(class="c-style col s4") style bar
    .characteristic-line
      div(class="c-name col s4") BU/GU
      div(class="c-value col s4") #{recipe.buToGu.toFixed(3)}
      div(class="c-style col s4") style bar
